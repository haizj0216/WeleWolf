<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/color_profile_item_bg"

            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="51dp"
                android:layout_centerInParent="true"
                >

                <ImageView
                    android:id="@+id/iv_uploadsuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/certification_upload_success"
                    android:layout_centerVertical="true"/>

                <LinearLayout
                    android:id="@+id/ll_uploadsuccess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/iv_uploadsuccess"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    >

                    <TextView

                        android:id="@+id/tv_uploadsuccess"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传证件成功"
                        android:textColor="#5f5f5f"
                        android:textSize="15sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:textSize="12sp"
                        android:textColor="#808080"
                        android:layout_below="@id/tv_uploadsuccess"
                        android:text="预计3个工作日后验证完成"/>

                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
</FrameLayout>