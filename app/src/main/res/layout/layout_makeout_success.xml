<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="25dp">

            <ImageView
                android:id="@+id/mail_img"
                android:layout_width="132dp"
                android:layout_height="106dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:src="@drawable/icon_mail_for_makequestion" />


            <TextView
                android:id="@+id/success_notice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_img"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="发布比赛成功"
                android:textColor="@color/color_text_main"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/success_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/success_notice"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="2dp"
                android:gravity="center_horizontal"
                android:textColor="@color/color_text_primary"
                android:textSize="13dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/success_confirm"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@id/success_desc"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/bg_button_common"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <!--比赛类型-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_game_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/tv_game_type"
                android:textStyle="bold"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_game_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/tv_game_type"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_divider_size"
            android:background="@color/color_divider" />

        <!--比赛班级-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_game_class_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/tv_game_class"
                android:textStyle="bold"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/tv_game_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/tv_game_class"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_text_main"
                android:textSize="@dimen/sp_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_divider_size"
            android:background="@color/color_divider" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_game_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="比赛名称"
                android:textStyle="bold"
                android:textColor="@color/color_text_main"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time_homework_submmit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="@dimen/dp_15"
                android:ellipsize="end"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/color_text_main"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_divider_size"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_game_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="比赛日期"
                android:textStyle="bold"
                android:textColor="@color/color_text_main"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time_homework_submmit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/color_text_main"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_divider_size"
            android:background="@color/color_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_game_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="答题时间"
                android:textStyle="bold"
                android:textColor="@color/color_text_main"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/time_homework_submmit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:text="111"
                android:textColor="@color/color_text_main"
                android:textSize="14dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:id="@+id/download_student_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/download_student_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:src="@drawable/bt_content_icon_close" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/icon_launcher_student" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单词部落学生端"
                    android:textColor="@color/color_text_main"
                    android:textSize="@dimen/size_text_main" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="注册学生账号，加入班级体验单词比赛流程"
                    android:textColor="@color/color_text_primary"
                    android:textSize="@dimen/size_text_primary" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="82dp"
                android:layout_height="match_parent"
                android:layout_marginRight="15dp">

                <TextView
                    android:id="@+id/download_student"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="立即下载"
                    android:textColor="@color/color_main_app"
                    android:textSize="13dp" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>