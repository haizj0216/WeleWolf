<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/student_outtime_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_centerHorizontal="true">

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:background="@color/color_text_primary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="补测学生"
                android:layout_marginLeft="8dp"
                android:textColor="@color/color_text_primary"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/student_outtime_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="(7人)"
                android:textColor="@color/color_text_primary"
                android:textSize="12dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:background="@color/color_text_primary"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/student_ranking_layout"
            android:layout_width="60dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rank_img"
                android:layout_width="21dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_rank_first" />

            <TextView
                android:id="@+id/student_ranking_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/color_text_primary"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/student_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/student_head_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="王大锤"
                android:textColor="@color/color_text_main"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/student_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="100"
            android:textColor="@color/color_text_main"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/student_time_used"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="24分46秒"
            android:textColor="@color/color_text_main"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/student_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="@color/color_divider" />
</LinearLayout>