<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/class_transfer_phone_head"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:src="@drawable/bt_class_transfer_teacher_unknown" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:background="@color/color_white_100"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left_or_right"
            android:text="对方手机号"
            android:textColor="@color/color_text_main"
            android:textSize="15dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:background="@color/color_divider"
            android:layout_marginLeft="@dimen/margin_left_or_right"/>

        <com.buang.welewolf.widgets.CleanableEditText
            android:id="@+id/class_transfer_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:numeric="integer"
            android:inputType="phone"
            android:textColor="@color/color_text_main"
            android:textSize="14dp" />
    </LinearLayout>

    <Button
        android:id="@+id/class_transfer_phone_next"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_high_size"
        android:layout_marginLeft="@dimen/margin_left_or_right"
        android:layout_marginRight="@dimen/margin_left_or_right"
        android:layout_marginTop="25dp"
        android:background="@drawable/common_btn_strong_selector"
        android:text="下一步"
        android:textColor="@drawable/common_btn_text_strong_selector"
        android:textSize="@dimen/button_text_size"
        android:enabled="false"/>
</LinearLayout>