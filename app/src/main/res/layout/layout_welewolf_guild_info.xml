<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tvChat"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_auth_shooting"
            android:gravity="center"
            android:text="公会聊天室"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_divider" />
    </RelativeLayout>

    <com.buang.welewolf.widgets.CustomScrollView
        android:id="@+id/svScrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvChat"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_black_30" />

                <ImageButton
                    android:id="@+id/title_bar_back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@null"
                    android:padding="15dp"
                    android:src="@drawable/bt_title_back_dark" />

                <TextView
                    android:id="@+id/tvSetting"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/ivHead"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="90dp"
                    android:background="@drawable/bg_write_circle"
                    android:padding="1dp"
                    android:src="@drawable/bt_message_default_head" />

                <TextView
                    android:id="@+id/ivName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivHead"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="小仙女"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/ivLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ivName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_level"
                    android:padding="2dp"
                    android:text="五星公会"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="公会介绍"
                android:textColor="@color/color_a1a1a1"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvDeclartion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n这家伙很懒，什么都没说\n\n"
                android:textColor="@color/color_4c4b54"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:text="公会成员（60/80）"
                android:textColor="@color/color_4c4b54"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider" />

            <RelativeLayout
                android:id="@+id/rvMembers"
                android:layout_width="match_parent"
                android:layout_height="102dp">

                <LinearLayout
                    android:id="@+id/ivMembers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:orientation="horizontal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/icon_profile_more" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="公会福利"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvWelfare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:text="暂未开放"
                    android:textColor="@color/color_4c4b54"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="公会ID"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvGuildID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:text="暂未开放"
                    android:textColor="@color/color_4c4b54"
                    android:textSize="15dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="创建时间"
                    android:textColor="@color/color_a1a1a1"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tvCreateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:text="2017-9-9"
                    android:textColor="@color/color_4c4b54"
                    android:textSize="15dp" />
            </LinearLayout>
        </LinearLayout>
    </com.buang.welewolf.widgets.CustomScrollView>

    <RelativeLayout
        android:id="@+id/rvTopLayou"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/color_title_bar"
        android:visibility="invisible">

        <ImageButton
            android:id="@+id/ivTopBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:padding="15dp"
            android:src="@drawable/bt_title_back_dark" />

        <TextView
            android:id="@+id/tvTopSetting"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>