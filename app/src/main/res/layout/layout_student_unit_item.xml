<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="172dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_class_unit_item"
    android:orientation="vertical">

    <TextView
        android:id="@+id/student_unit_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Unit 1"
        android:textColor="@color/color_text_main"
        android:textSize="18dp" />

    <com.buang.welewolf.widgets.WaveView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/student_unit_item_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/icon_wave_bg"
        app:wave_circle="true"
        app:wave_color="#fcc369" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/circle_progress"
        android:layout_alignTop="@id/circle_progress"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/icon_wave_light" />

    <TextView
        android:id="@+id/student_unit_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circle_progress"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="已练熟"
        android:textColor="@color/color_text_main"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/student_unit_item_desc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="4dp"
        android:gravity="bottom">

        <TextView
            android:id="@+id/student_unit_item_learned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/color_text_main"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/student_unit_item_wordscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/50"
            android:textColor="@color/color_text_primary"
            android:textSize="12dp" />
    </LinearLayout>
</RelativeLayout>