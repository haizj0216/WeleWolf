<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_main_app"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="10dp"
                android:text="修改密码"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/header_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/bt_title_back" />

            <TextView
                android:id="@+id/header_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="保存"
                android:textColor="@color/update_password_save_bg"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="12dp" >

            <com.knowbox.teacher.widgets.CleanableEditText
                android:id="@+id/source_password"
                style="@style/regist_edit_text_1"/>

            <com.knowbox.teacher.widgets.CleanableEditText
                android:id="@+id/new_password"
                style="@style/regist_edit_text_1"/>

            <com.knowbox.teacher.widgets.CleanableEditText
                android:id="@+id/secondary_password"
                style="@style/regist_edit_text_1"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="密码必须是6-20位数字或字符的任意组合"
            android:textColor="@color/gray" />
    </LinearLayout>

</FrameLayout>