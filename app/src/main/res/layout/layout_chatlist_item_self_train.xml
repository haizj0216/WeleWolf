<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/chatlist_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/msg_share_homework_item_border"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chatlist_item_bg"
            android:layout_width="fill_parent"
            android:layout_height="95dp"
            android:background="@drawable/message_self_train">

            <TextView
                android:id="@+id/rank_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="15dp"
                android:text="05-18"
                android:textColor="@color/color_white_100"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/message_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="高一5班七个隆咚锵咚锵"
                    android:textColor="@color/color_white_100"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/massage_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="10dp"
                    android:text="30人参赛，共计完成233题"
                    android:textColor="@color/color_white_100"
                    android:textSize="16dp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/desc_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text="夏雨荷获得了今日的冠军"
                android:textColor="@color/color_text_primary"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:drawablePadding="5dp"
                android:textColor="@color/color_text_primary"
                android:textSize="13dp"
                android:drawableRight="@drawable/profile_icon_next"
                android:text="查看" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>