<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center_vertical"
        android:minHeight="75dp">

        <RelativeLayout
            android:id="@+id/student_ranking_layout"
            android:layout_width="50dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rank_img"
                android:layout_width="21dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_rank_first" />

            <TextView
                android:id="@+id/student_ranking_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="1"
                android:textColor="@color/color_text_primary"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/student_user_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/student_head_photo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/default_img" />

            <TextView
                android:id="@+id/student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="王大锤"
                android:textColor="@color/color_text_main"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/student_study_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="139"
                android:textColor="@color/color_text_main"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/student_study_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="99%"
                android:textColor="@color/color_text_main"
                android:textSize="13dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/student_encourage"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/common_btn_strong_selector"
            android:gravity="center"
            android:singleLine="true"
            android:text="鼓励他"
            android:textColor="@color/color_white_100"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:id="@+id/student_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="15dp"
        android:background="@color/color_divider" />
</RelativeLayout>