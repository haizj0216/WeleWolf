<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/dialog_btn_bg" >

        <ImageView
            android:id="@+id/dialog_common_list_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_common_list_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_toRightOf="@id/dialog_common_list_item_icon"
            android:paddingLeft="10dp"
            android:textColor="#666666"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/dialog_common_list_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_common_list_item_title"
            android:paddingLeft="10dp"
            android:textColor="#b5b5b5"
            android:textSize="12dp" />
    </RelativeLayout>

    <View
        android:id="@+id/dialog_common_list_item_devider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_top_divider_size"
        android:background="@color/color_divider" />

</LinearLayout>