<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/confirm_makeout_question_class">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/confirm_class_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_or_right"
            android:src="@drawable/default_img" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="60dp"
            android:layout_toRightOf="@id/confirm_class_photo">

            <TextView
                android:id="@+id/confirm_makequestion_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="小红花班级"
                android:textColor="@color/classinfo_item_classname_color"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/confirm_makequestion_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/confirm_makequestion_class"
                android:layout_marginTop="5dp"
                android:text="高三"
                android:textColor="@color/classinfo_item_gradename_txt"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_class_selected"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_or_right"
            android:src="@drawable/bg_assign_unit_check" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_top_divider_size"
        android:layout_alignParentTop="true"
        android:background="@color/color_divider"/>

</RelativeLayout>