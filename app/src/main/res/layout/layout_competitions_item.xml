<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1000dp"
    android:layout_height="140dp"
    android:id="@+id/root_layout_view"
    android:clipChildren="false"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/select_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@drawable/bg_competition_select_btn"/>

    <RelativeLayout
        android:id="@+id/item_layout"
        android:layout_width="1000dp"
        android:layout_height="match_parent"
        android:background="@color/color_white_100">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unit1 My name is Lucy"
            android:textSize="18sp"
            android:paddingTop="25dp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingRight="70dp"
            android:paddingLeft="15dp"
            android:textColor="@color/color_text_main"/>

        <TextView
            android:id="@+id/state"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_marginRight="15dp"
            android:textSize="12sp"
            android:textColor="@color/color_white_100"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="25dp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1月19日-1月24日 每天22:00-24：00"
            android:textColor="@color/color_text_primary"
            android:textSize="17sp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingLeft="15dp"
            android:layout_below="@id/title"/>

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_text_primary"
            android:text="初三3班"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingRight="130dp"
            android:paddingLeft="15dp"
            android:layout_alignParentBottom="true"
            android:paddingBottom="25dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="15dp"
            android:paddingBottom="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/join_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:includeFontPadding="false"
                android:textColor="@color/color_text_main"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/student_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/35"
                android:textColor="@color/color_text_primary"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人参赛"
                android:textColor="@color/color_text_primary"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_top_divider_size"
            android:background="@color/color_divider"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>

</RelativeLayout>