<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/student_unit_header_head"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/student_unit_header_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@color/color_text_main"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_unit_header_learned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_main"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/student_unit_header_learned_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_rule"
                android:gravity="center"
                android:text="已练熟单词"
                android:textColor="@color/color_text_primary"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本周"
                    android:textColor="@color/color_text_main"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/student_unit_header_learned_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/color_button_red"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="昨日"
                    android:textColor="@color/color_text_main"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/student_unit_header_learned_lastday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/color_button_red"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:background="@color/color_divider"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_unit_header_learning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_main"
                android:textSize="36dp" />

            <TextView
                android:id="@+id/student_unit_header_learning_rule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawablePadding="3dp"
                android:drawableRight="@drawable/icon_rule"
                android:gravity="center"
                android:text="练习中单词"
                android:textColor="@color/color_text_primary"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:gravity="bottom">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本周"
                    android:textColor="@color/color_text_main"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/student_unit_header_learning_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/color_button_red"
                    android:textSize="11dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:text="昨日"
                    android:textColor="@color/color_text_main"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/student_unit_header_learning_lastday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="2dp"
                    android:textColor="@color/color_button_red"
                    android:textSize="11dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>