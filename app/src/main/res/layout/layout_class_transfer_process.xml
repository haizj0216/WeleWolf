<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="44dp">

        <ImageView
            android:id="@+id/class_transfer_process_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/bt_class_transfer_processing" />

        <TextView
            android:id="@+id/class_transfer_process_classname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="2班"
            android:textColor="@color/color_text_third"
            android:textSize="13dp" />

        <ImageView
            android:id="@+id/class_transfer_process_send_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@id/class_transfer_process_status"
            android:src="@drawable/bt_chat_teacher_default" />

        <ImageView
            android:id="@+id/class_transfer_process_recerive_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@id/class_transfer_process_status"
            android:src="@drawable/bt_chat_teacher_default" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="转给"
            android:textColor="@color/color_text_third"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/class_transfer_process_recerive_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="某"
            android:textColor="@color/color_text_main"
            android:textSize="@dimen/item_title_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/class_transfer_process_recerive_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="11111111111"
        android:textColor="@color/color_text_main"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/class_transfer_process_recerive_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="清华附中"
        android:textColor="@color/color_text_third"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/class_transfer_process_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_high_size"
        android:layout_marginLeft="@dimen/margin_left_or_right"
        android:layout_marginRight="@dimen/margin_left_or_right"
        android:layout_marginTop="24dp"
        android:background="@drawable/common_btn_strong_selector"
        android:text="转移给TA"
        android:gravity="center"
        android:textColor="@drawable/common_btn_text_strong_selector"
        android:textSize="@dimen/button_text_size"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/text_transfer_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_text_primary"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:text="请求中，"/>

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/color_main_app"
            android:text="点击取消"/>

    </LinearLayout>
</LinearLayout>
