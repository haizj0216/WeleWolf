<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emtpy_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_empty_nodata" />

        <TextView
            android:id="@+id/empty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_text_main"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/empty_hint2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="@color/color_text_primary"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/empty_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_high_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/common_btn_strong_selector"
            android:text="布置作业"
            android:textColor="@drawable/common_btn_text_strong_selector"
            android:textSize="@dimen/button_text_size"
            android:visibility="gone" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
    </LinearLayout>
</RelativeLayout>