<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/virtual_image_text_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black_70" />

    <ImageView
        android:id="@+id/virtual_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_virtual_transparent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black_70">

        <ImageView
            android:id="@+id/virtual_image_text_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="@dimen/margin_left_or_right"/>
    </RelativeLayout>

</LinearLayout>